<div class="container-fluid">
  <div class="fallback">
  <%= form_for @pin, html: { multipart: true }  do |f| %>
    <% if @pin.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this photo from being saved:</h2>

        <ul>
        <% @pin.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="box panel panel-default">
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
        <br>
      <div class="form-group">
         <%= simple_form_for @pin do |f| %>
         <%= f.input :tag_list, collection: [ "Rings", "Fashion Rings", "Jewelry", "Pearls", "Gold", 
          "Children's Jewelry", "Yan Djap's Custom"] %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
  </div>
</div>